
.SignIn
  .Header

    .leftHeader
      %h1.grid-6
        %a.post.Home{:href => "/",data: {"turbolinks" => false}} HOME
  .AccountPage
    .AccountPage__title
      %h2.title SIGN IN
      
    .AccountPage__form
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .FormField
          .FormField__label--normal
            = f.label :email, class: "email"
          .FormField__input--normal
            = f.email_field :email, class: "emailform", autofocus: true, size: 60
        .FormField
          .FormField__label--normal
            = f.label :password, class: "password"
            %i (8 characters maximum)
          .FormField__input--normal
            = f.password_field :password, autocomplete: "off", size: 60
        .actions
          = f.submit "Log in", class: 'Button UserButton'
    .AccountPage__render
      = render "devise/shared/links"
      