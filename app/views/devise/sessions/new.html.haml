
.SignIn 
  .AccountPage
    .AccountPage__title
      %h2.title SIGN IN  
    .AccountPage__form
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .FormField
          .FormField__label--normal
            = f.label :email, class: "email"
          .FormField__input--normal
            = f.email_field :email, class: "emailform", autofocus: true, size: 60
        .FormField
          .FormField__label--normal
            = f.label :password, class: "password"
            %i (英数字8文字以上)
          .FormField__input--normal
            = f.password_field :password, autocomplete: "off", size: 60
        .actions
          = f.submit "SIGN IN", class: 'Button UserButton'
    .AccountPage__render
      .leftBtn
        = link_to "SIGN UP", new_user_registration_path, class: "Btn Signin UserButton"
      .rightBtn
        = link_to "HOME", root_path, class: "Btn Home"