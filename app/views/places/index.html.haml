

%header.header
  .header__bar.row
    .leftHeader
      %h1.grid-6
        %a.post.Home{:href => "/"} HOME
    .rightHeader  
      - if user_signed_in?
        .user_nav.grid-6
          = link_to "ログアウト", destroy_user_session_path, class: "post Logout", method: :delete
          = link_to  "地点追加", new_place_path, class: "post AddPlace"
      - else
        .grid-6
          = link_to "ログイン", new_user_session_path, class: "post Login"
          = link_to "新規登録", new_user_registration_path, class: "post Signup"
%p#notice= notice
%h1 Places
%table
  %thead
    %tr
      %th Name
      %th Description
      %th Latitude
      %th Longitude
      %th{:colspan => "3"}
  %tbody
    - @places.each do |place|
      %tr
        %td= place.name
        %td= place.description
        %td= place.latitude
        %td= place.longitude
        %td= link_to 'Show', place
        %td= link_to 'Edit', edit_place_path(place)
        %td= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' }
